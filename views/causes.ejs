            </div>
            <section class="section-header bg-primary text-white pb-4 pb-sm-5 pb-lg-6">
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-12 col-md-8 text-center">
                            <h1 class="display-2 mb-4">Programs</h1>
                           
                            <blockquote class="blockquote text-inherit text-center" style="background-color: rgba(28, 70, 17, 0.411);">
                                Supporting charity causes Islamically is a fundamental tenet of compassion and social responsibility in Islam.
                            </blockquote>
                        </div>
                    </div>
                </div>
            </section>
            <section class="section section-lg line-bottom-light">
                
                        <div class="section section-lg p-0">
                            <div class="container">
                                
                                <div class="row mb-5">
                                    <% for (i in programs) {%>
                                        <div class="col-12 col-lg-6 mb-5 mb-lg-0">
                                            <div class="card shadow">
                                                <div class="row g-0 align-items-center">
                                                    <div class="col-md-4"><img src="assets/img/blog/image-4.jpg" class="card-img rounded-start" alt="Artist desk" /></div>
                                                    <div class="col-md-8">
                                                        <div class="card-body">
                                                            <a href="/causes/<%= programs[i]._id%>"><h3 class="h5 card-title"><%= programs[i].title%></h3></a>
                                                            <p class="card-text mb-4">
                                                                <%=programs[i].description %> 
                                                            </p>
                                                                <div class="progress-wrapper">
                                                                    <div class="progress-info">
                                                                        <span class="h4 progress-tooltip bg-success">Raised</span>
                                                                        <div class="progress-percentage"><span>40%</span></div>
                                                                    </div>
                                                                    <div class="progress"><div class="progress-bar bg-success" role="progressbar" style="width: 25%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div></div>
                                                                </div>
                                                            
                                                            <div class="d-flex justify-content-between align-items-center">
                                                                <span class="card-text small"><span><%= programs[i].formattedTargetDate%></span> <a href="#" class="small"><span class="far fa-comments me-2"></span><h5><%= programs[i].goal%></h5></a>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    <% } %>


                                    <!-- Cards  -->

                                    
                                    
                                </div>
                               
                                
                            </div>
                        </div>
                   
